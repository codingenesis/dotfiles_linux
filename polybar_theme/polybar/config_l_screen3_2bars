[module/hddtemp_SSD_PNY]
type = custom/script
interval = 0.5
format = %{F#ACACCB}  SSD2 %{F#d33682}<label>  %{F-}
format-prefix-padding = 2
format-prefix = ""
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen2}
format-background = ${colors.backgroundRgba}
exec = hddtemp /dev/sdb | cut -c55-59

[module/hddtemp_SSD_SAMSUNG]
type = custom/script
interval = 0.5
format = %{F#ACACCB}  SSD1 %{F#d33682}<label>  %{F-}
format-prefix-padding = 2
format-prefix = ""
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen2}
format-background = ${colors.backgroundRgba}
exec = hddtemp /dev/sda | cut -c57-61

[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 0
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input
warn-temperature = 80
format = %{F#ACACCB}  INT %{F#d33682}<label>  %{F-}
format-warn = <label-warn>
format-prefix-padding = 2
format-prefix = ""
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen2}
format-background = ${colors.backgroundRgba}
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

[module/gpu_temp]
type = custom/script
interval = 2
format = %{F#ACACCB}  GPU %{F#d33682}<label>°C  %{F-}
format-prefix = ""
format-prefix-padding = 2
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen2}
format-background = ${colors.backgroundRgba}
exec = nvidia-smi -q -d temperature | grep GPU | perl -pe '/^GPU/ && s/\n//' | grep ^GPU | cut -c 59-60

[module/cpu]
type = internal/cpu
interval = 5
format = %{F#000000}  CPU %{F#d33682}<label>  %{F-}
format-prefix = ""
format-prefix-padding = 2
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen1}
format-background = ${colors.backgroundRgba}
format-foreground = ${colors.brownScreen1}
label-foreground = ${colors.foreground}
label = %{F#d33682}%percentage:4%%%{F-}

[module/memory]
type = internal/memory
interval = 5
format = %{F#000000}  RAM%{F-} %{F#000000}<label>  %{F-}
format-prefix = ""
format-prefix-padding = 2
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen1}
format-background = ${colors.backgroundRgba}
label = %{F#d33682}%percentage_used:3%%%{F-} (%{F#000000}%gb_used:5%%{F-}/%{F#82140d}%gb_free:5%%{F-})
format-foreground = ${colors.brownScreen1}
label-foreground = ${colors.foreground}

[module/filesystem]
type = internal/fs
mount-0 = /
;mount-1 = /boot
;mount-2 = /tmp
;mount-3 = /dev
;mount-4 = /run
;mount-5 = /backup
interval = 1024
fixed-values = true
spacing = 0
format-mounted-prefix = ""
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>
;label-mounted = %{F#000000}  %mountpoint%:%{F-} %{F#000000}%percentage_free%%%{F-} free of %{F#000000}%total%  %{F-}
label-mounted = %{F#000000}  %mountpoint% %{F-} %{F#000000}%percentage_free%%%{F-} free  %{F-}
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.secondary}
label-mounted-foreground = ${colors.brownScreen2}
label-mounted-background = ${colors.backgroundRgba}
format-mounted-prefix-padding = 2
format-mounted-prefix-foreground = ${colors.backgroundRgba}
format-mounted-prefix-background = ${colors.brownScreen2}

[module/pkg]
type = custom/script
interval = 1200
format = %{F#000000} <label>  %{F-}
format-prefix-padding = 2
format-prefix = ""
format-prefix-foreground = ${colors.backgroundRgba}
format-prefix-background = ${colors.brownScreen2}
format-background = ${colors.backgroundRgba}
label = "%output:10%"
exec = ~/.config/polybar/script/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

